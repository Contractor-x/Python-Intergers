# Printing a string from user's input
Int_input = input("Good day, Please input a number: ")
print("The number inputted is {}".format(Int_input))

# Integer length
print("Integer length {}".format(len(Int_input)))

# Integer Operations
a = "10"
b = "20"
print(int(a) + int(b))
print(int(a) - int(b))
print(int(a) * int(b))
print(int(a) / int(b))

# Printing Floats
print(float(a) + float(b))
print(float(a) - float(b))
print(float(a) * float(b))
print(float(a) / float(b))

# Booleans
print("Whole Number {}:".format(a))

# Operation continued
num = int(input("Enter a number: "))
if num % 2 == 0:
    print("This number is an even number")
else:
    print("This number is an odd number.")

# Checking the integer length
print(len(str(num)))
